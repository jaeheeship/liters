<table name="filebox">
	<column name="file_id" type="int" size="11" primary_key="true" />
	<column name="file_type" type="varchar" size="30" />
	<column name="encrypted_file_name" type="varchar" size="100" />
	<column name="original_file_name" type="varchar" size="100" />
	<column name="file_ext" type="varchar" size="30" />
    <column name="file_size_kb" type="int" size="11" default="0" not_null="true"/>
	<column name="tag" type="varchar" size="255" />

	<column name="is_image" type="int" size="1" />
	<column name="image_type" type="varchar" size="10" />
	<column name="image_width" type="int" size="11" />
	<column name="image_height" type="int" size="11" /> 

	<column name="full_path" type="varchar" size="200" />
	<column name="file_path" type="varchar" size="200" />
	<column name="reg_date" type="date" />
	<column name="ip_address" type="varchar" size="32" />

    <column name="username" type="varchar" size="50" not_null="true"/>
    <column name="email" type="varchar" size="100" not_null="true"/> 
    <column name="uid" type="int" size="11" not_null="true"/>
</table>
